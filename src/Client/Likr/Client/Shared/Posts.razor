<div class="w-full xl:w-7/12">
    @foreach (var post in _posts.OrEmptyIfNull())
    {
        <Post PostDto="post" />
    }
    <div class="mb-6 mx-auto text-center w-full">
        <button @onclick="LoadMorePosts" class="px-3 py-2 rounded bg-blue-600 hover:bg-blue-700 transition ease-in-out duration-200">Load
            more</button>
    </div>
</div>